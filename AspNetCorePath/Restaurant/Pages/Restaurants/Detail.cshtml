@page  "{restaurantId:int}"
@model Restaurant.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>@Model.Restaurant.Name</h2>
<div>
    Id : @Model.Restaurant.Id
</div>
<div>
    Location : @Model.Restaurant.Location
</div>
<div>
    Cuisine : @Model.Restaurant.Cuisine
</div>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}
<a class=" btn btn-default" asp-page="./List">All Restaurants</a>
